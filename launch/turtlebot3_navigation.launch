<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find turtlebot3_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="false"/>
  <arg name="move_forward_only" default="false"/>

  <arg name="robots" default="2"/>
  


  <!-- Follower launch -->

  <!-- Turtlebot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Map server 
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/> -->

  <!-- AMCL 
  
  <include file="$(find swarmbots)/launch/amcl.launch">
    <arg name="ns" value="robot$(arg followers)"/>
    <arg name="followers" value ="$(arg followers)"/>
  </include>
  -->

  <!-- move_base -->

  <arg name="newrobots" value="$(eval arg('robots') - 1)"/>
  <include file="$(find swarmbots)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="ns" value="robot$(arg newrobots)"/>
    <arg name="followers" value ="$(arg newrobots)"/>
  </include>



  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"/>
  </group>

</launch>

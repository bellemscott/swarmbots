<launch>
  <param name="/use_sim_time" value="true" />
  <!-- need to declare model up here before passing into the include file! -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi, burger_for_autorace]"/>
  <arg name="world" default="empty"/>
  <arg name="followers" default="2"/>

  <!-- start empty world -->
  <node name="gazebo" pkg="gazebo_ros" type="gazebo" respawn="false" output="screen"
    args="-world_name $(find swarmbots)/worlds/$(arg world).world"/>

  <!-- start gui -->
  <!-- <node name="gazebo_gui" pkg="gazebo" type="gui" respawn="false" output="screen"/> -->

  <!-- include Swarm Boss -->
  <include file="$(find swarmbots)/launch/swarmboss.launch">
    <!-- pass model of robot into robots.launch file getting $(arg model) from command line, which launches the urdf -->
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- recursively start new node -->
  <include file="$(find swarmbots)/launch/follower.launch" if="$(eval arg('followers') - 1 >= 0)">
    <arg name="followers" value="$(eval arg('followers') - 1)"/>
    <arg name="model" value="$(arg model)"/>
    <arg name="ns" value="robot$(arg followers)"/>
  </include>
</launch>